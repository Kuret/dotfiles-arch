# Reload sxhkd
super + Escape
 pkill -USR1 -x sxhkd

# Screen lock
super + shift + z
  slock

# Screenkey
super + o
  screenkey

super + shift + o
  pkill -f screenkey

# Apps
super + Return
 alacritty

super + @space
 rofi -show combi


# Media Keys

# Media controls
super + XF86AudioPlay
  $HOME/bin/spt list Casual

XF86AudioPlay
 playerctl play-pause

XF86AudioNext
 playerctl next

XF86AudioPrev
 playerctl previous

# Volume
XF86AudioRaiseVolume
 amixer sset Master 2%+ unmute

XF86AudioLowerVolume
 amixer sset Master 2%- unmute

XF86AudioMute
 amixer sset Master toggle

# Brightness
XF86MonBrightnessUp
 light -A 10%

XF86MonBrightnessDown
 light -U 10%

# Bspwm
super + alt + Escape
 bspc quit

# exit / kill
super + {_,shift + }q
 bspc node -{c,k}

# set the window state
super + {s,f}
 state={floating,fullscreen}; \
 bspc query -N -n "focused.$\{state\}" && state=tiled; \
 bspc node -t "$state"

# mark node
super + m
 bspc node -g marked

# swap selected node with marked
super + shift + m
 bspc node -s newest.marked.local; \
 bspc node newest.marked.local -g marked

# send marked node to preselect
super + alt + m
 bspc node newest.marked.local -n newest.!automatic.local; \
 bspc node newest.marked.local -g marked

# rotate nodes
super + r
 bspc node @/ -R 90

# focus and swap nodes
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous node in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local

# focus monitors
super + Tab
  bspc monitor -f next; \
  flash_window

# move between monitors
super + grave
  bspc node -m next

# Switch to nth desktop of current monitor
super + {1-9,0}
    D={1-9,10}; \
    bspc desktop -f "$(bspc query -D -m | sed -n "$D p")"

#move to nth desktop of current monitor
super + shift + {1-9,0}
    D={1-9,10}; \
    bspc node -d "$(bspc query -D -m | sed -n "$D p")"

# preselect tiling window with ratio toggle
# or move a floating window
super + {Left,Down,Up,Right}
  D={( west "-20 0" ),( south "0 20" ),( north "0 -20" ),( east "20 0" )}; \
  P="$(bspc query -T -n | jshon -e presel)"; \
  R=$(if [ ! "$P" = "null" ] && [ "$(echo $P | jshon -e splitDir)" = \"$\{D[0]\}\" ]; then echo $(echo "$P" | jshon -e splitRatio); else echo ".4"; fi); \
  R_calc=$(if (($(echo $R '<' .9 | bc))); then echo $(echo $R + .1 | bc); else echo .1; fi); \
  bspc query -N -n focused.floating && bspc node -v $\{D[1]\} || bspc node -p $\{D[0]\} -o 0${R_calc}

# cancel the preselection for the focused node
super + slash
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + shift + slash
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

